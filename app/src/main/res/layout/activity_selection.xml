<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selection"
    tools:context=".selectionActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/heading2"
    android:text="Select Media Type You Want To Generate Captions"
    android:textAlignment="center"
    android:textSize="23dp"
    android:padding="15dp"
    android:textColor="#31C4F3"
    android:layout_marginTop="290dp"
    android:textStyle="bold"/>

    <Button
        android:id="@+id/button1"
        android:layout_below="@id/heading2"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:text="@string/upload_image1"
        android:backgroundTint="#31C4F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/baseline_image_24"/>
    <Button
        android:id="@+id/button2"
        android:layout_below="@id/button1"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:text="@string/upload_video"
        android:backgroundTint="#31C4F3"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/baseline_video_library_24"/>


</RelativeLayout>